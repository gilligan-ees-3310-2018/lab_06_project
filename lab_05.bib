	journal = {Nature},
	author = {Rogelj, Joeri and McCollum, David L. and Reisinger, Andy and Meinshausen, Malte and Riahi, Keywan},
	month = jan,
	year = {2013},
	keywords = {Climate change, Climate-change mitigation, Environmental economics},
	pages = {79--83},
